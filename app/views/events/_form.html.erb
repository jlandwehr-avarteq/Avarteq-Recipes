  <%= form_for(@event) do |f| %>
    <div class="row">
      <div class="col-xs-10 col-xs-offset-1 col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3 col-lg-6 col-lg-offset-3">
        <div class="form-group">
          <%= f.label :title %>
          <%= f.text_field :title,  class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :description %>
          <%= f.text_area :description, class: "form-control", rows: "5" %>
        </div>
        <div class="form-group">
          <%= f.label :date %>
          <%= f.text_field :date, "data-provide" => 'datepicker', class: "form-control" %>
        </div>
        <div class="form-group text-center">
          <%= f.label :start_time %>
          <%= f.time_select :start_time %>
        </div>
        <div class="form-group text-center">
          <%= f.label :end_time %>
          <%= f.time_select :end_time %>
        </div>
      </div>
    </div>
    <div class="row">
      <h3 class="text-center"><%= t('events.select_friends') %></h3>
      <div class="col-xs-4 col-xs-offset-5 col-sm-4 col-sm-offset-5 col-md-4 col-md-offset-5 col-lg-4 col-lg-offset-5">
        <%= f.collection_check_boxes(:id, @friends, :id, :username) do |a| %>
          <div class="checkbox">
            <label>
              <%= a.check_box(class: "check_box", checked: @event.users.include?(a.object)) %><%= a.object.username %>
            </label>
          </div>
        <% end %>
      </div>
    </div>
    <div class="row text-center">
    <%= f.submit t('forms.buttons.submit'), class: 'btn btn-primary' %>
    </div>
  <% end %>
