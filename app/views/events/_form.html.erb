<%= form_for(@event) do |f| %>
  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </div>
  <div class="field">
    <%= f.label :date %><br>
    <%= f.date_select :date %>
  </div>
  <div class="field">
    <%= f.label :start_time %><br>
    <%= f.time_select :start_time %>
  </div>
  <div class="field">
    <%= f.label :end_time %><br>
    <%= f.time_select :end_time %>
  </div>

 <div class="row">
      <div class="col-xs-4 col-xs-offset-5 col-sm-4 col-sm-offset-5 col-md-4 col-md-offset-5 col-lg-4 col-lg-offset-5">
        <%= f.collection_check_boxes(:id, @friends, :id, :username) do |a| %>
          <div class="checkbox">
            <label>
              <%= a.check_box(class: "check_box") %><%= a.object.username %>
            </label>
          </div>
        <% end %>
      </div>
    </div>






  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
