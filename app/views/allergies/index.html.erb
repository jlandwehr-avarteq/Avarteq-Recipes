<div class="container">
  <div class="page-header">
    <div class="row">
      <h1 class="text-center"><%= t('allergies.allergies_header') %></h1>
    </div>
  </div>

  <div class="row">
    <div class="col-xs-10 col-xs-offset-1 col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3 col-lg-6 col-lg-offset-3">
      <table class="table table-striped">
        <thead>
          <tr>
            <th><%= t('allergies.name') %></th>
            <th><%= t('forms.buttons.edit') %></th>
            <th><%= t('forms.buttons.destroy') %></th>
          </tr>
        </thead>
        <tbody>
          <% @allergies.each do |allergy| %>
            <tr>
              <td class="col-xs-6 col-sm-6 col-md-4 col-lg-4"><%= allergy.name %></td>
              <td class="col-xs-2 col-sm-1 col-md-1 col-lg-1"><%= render_allergy_edit_button(allergy) %></td>
              <td class="col-xs-2 col-sm-1 col-md-1 col-lg-1"><%= render_allergy_destroy_button(allergy) %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

  <div class="row">
    <p class="text-center"><%= t('allergies.add') %></p>
    <div class="text-center">
      <%= link_to t('forms.buttons.new'), new_allergy_path, class: 'btn btn-success' %>
    </div>
  </div>
</div>

