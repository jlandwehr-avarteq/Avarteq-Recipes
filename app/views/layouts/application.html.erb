      <div class="row">
        <div class="col-lg-12">
          <p class="notice"><%= notice %></p>
          <p class="alert"><%= alert %></p>
          <% if user_signed_in? %>
            <p> Hello, <%= current_user.username %> - <%= link_to('Logout', destroy_user_session_path, :method => :delete) %> <p>
          <% end %>
          <%= yield %>
        </div>
      </div>
