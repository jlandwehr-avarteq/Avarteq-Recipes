<!DOCTYPE html>
<html>
  <head>
    <title>AvarteqRecipes</title>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>
  </head>
  <body>
    <!-- Fixed navbar -->
    <div class="container">
      <div class="row">
        <div class="col-lg-12">
          <nav class="navbar navbar-default navbar-fixed-top">
            <div class="container">
              <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                  <span class="sr-only">Toggle navigation</span>
                  <span class="icon-bar"></span>
                  <span class="icon-bar"></span>
                  <span class="icon-bar"></span>
                </button>
                <%= link_to "Avarteq Recipes", root_path, class: "navbar-brand" %>
              </div>
              <div id="navbar" class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                  <li class="<%= is_active?(root_path)%>"> <%= link_to t('header.home'), root_path %></li>
                  <li> <%= t('header.recipes') %> </li>
                  <li class="<%= is_active?(friendships_friends_path)%>"> <%= link_to t('header.friends'), friendships_friends_path %></li>
                  <li><%= t('header.groups') %> </li>
                  <li><%= t('header.my_recipes') %> </li>
                </ul>
                <ul class="nav navbar-nav navbar-right">
                  <li><%= render 'devise/menu/user_profile' %></li>
                  <li><%= render 'devise/menu/login_items' %></li>
                </ul>
              </div><!--/.nav-collapse -->
            </div>
          </nav>
        </div>
      </div>
    </div>

    <div class="container">
      <div class="row">
        <div class="col-lg-12">
          <p class="notice"><%= notice %></p>
          <p class="alert"><%= alert %></p>
        </div>
      </div>
    </div>
    <div class="container">
      <div class="row">
        <div class="col-lg-12">
          <%= yield %>
        </div>
      </div>
    </div>
  </body>
</html>
