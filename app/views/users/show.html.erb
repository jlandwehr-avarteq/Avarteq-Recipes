<div class="container">
  <div class="page-header">
    <div class="row">
      <h1 class="text-center"><%= @user.username.capitalize %>'s user information</h1>
    </div>
  </div>

  <h3 class="text-center"> <%= @user.username.capitalize %>'s personal information </h3>
  <div class="row">
    <div class="col-xs-6 col-xs-offset-3 col-sm-4 col-sm-offset-4 col-md-4 col-md-offset-4 col-lg-4 col-lg-offset-4">
      <%= render 'show_user' %>
    </div>
  </div>
  <div class="row">
    <h3 class="text-center"> <%= @user.username.capitalize %>'s food restrictions </h3>
    <!-- Display user's restriction -->
  </div>
  <div class="row">
    <h3 class="text-center"> <%= @user.username.capitalize %>'s food allergies </h3>
    <!-- Display user's allergies -->
    <div class="col-xs-6 col-xs-offset-3 col-sm-4 col-sm-offset-4 col-md-4 col-md-offset-4 col-lg-4 col-lg-offset-4">
      <ul class="list-group">
        <% @user.allergies.each do |allergy| %>
          <li class="list-group-item"><%= allergy.name %></li>
        <% end %>
      </ul>
    </div>
  </div>
  <div class="row">
    <h3 class="text-center"> <%= @user.username.capitalize %>'s food rating</h3>
    <div class="col-md-4 col-md-offset-4 col-lg-4 col-lg-offset-4">
      <!-- Display user's food rating results-->
    </div>
  </div>
</div>
